<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".salons_client_alta">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/SalonsClientAltaLITNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/SalonsClientAltaTXTNom" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/SalonsClientAltaBUTEditarManual"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/SalonsClientAltaBUTFetAma"
                    android:gravity="center_vertical|center_horizontal"
                    android:drawableBottom="@drawable/ic_gesture_black_36dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:onClick="btnAPlanolOnClick"/>


                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@color/green"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SalonsClientAltaSEKAmplada"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:max="50"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/SalonsClientAltaLITAmplada"
                        android:id="@+id/SalonsClientAltaLITAmplada"
                        android:layout_gravity="center_horizontal" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SalonsClientAltaSEKAlsada"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:max="50"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/SalonsClientAltaLITAlsada"
                        android:id="@+id/SalonsClientAltaLITAlsada"
                        android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>

            <com.example.it00046.bodina3.Classes.CanvasAuto
                android:id="@+id/SalonsClientAltaVIWDrawing"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/SalonsClientAltaBUTEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_mode_edit_black_36dp" />

                <ImageButton
                    android:id="@+id/SalonsClientAltaBUTEsborrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ic_delete_black_36dp" />

                <ImageButton
                    android:id="@+id/SalonsClientAltaBUTRotar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/ic_replay_black_36dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

