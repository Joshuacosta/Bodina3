<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DistribucionsClientTaulaConvidatsNDRConvidats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc">

        <com.example.it00046.bodina3.Classes.TaulaConvidatsEdicio
            android:id="@+id/DistribucionsClientMantTaulaConvidatsVIWDrawing"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/DistribucionsClientMantTaulaConvidatsFLMEines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            fab:menu_showShadow="false"
            fab:menu_buttonSpacing="3dp"
            fab:menu_colorNormal="@color/green"
            fab:menu_backgroundColor="@color/white"
            fab:menu_labels_singleLine="true"
            fab:menu_labels_position="left">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/DistribucionsClientMantTaulaConvidatsFLBAssistent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_wizard"
                fab:fab_size="mini"
                fab:fab_showShadow="false"
                fab:fab_label="@string/DistribucionsClientMantTaulaConvidatsLABAssistent"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/DistribucionsClientMantTaulaConvidatsFLBConfiguracio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_white_24dp"
                fab:fab_size="mini"
                fab:fab_showShadow="false"
                fab:fab_label="@string/DistribucionsClientMantTaulaConvidatsLABConfiguracio"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/DistribucionsClientMantTaulaConvidatsFLBTaula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_eye_closed"
                fab:fab_size="mini"
                fab:fab_showShadow="false"
                fab:fab_label="@string/DistribucionsClientMantTaulaConvidatsLABTaula"/>

        </com.github.clans.fab.FloatingActionMenu>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/DistribucionsClientMantTaulaConvidatsIMBAjuda"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom|left"
            android:background="@drawable/ic_help_black_24dp" />
    </FrameLayout>

    <!-- Drawer lateral dret que mostra els convidats -->
    <ListView android:id="@+id/DistribucionsClientMantTaulaConvidatsNDLConvidats"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
        android:divider="@android:color/holo_blue_light"
        android:dividerHeight="5dp"
        android:background="@color/background_material_light"/>

    <!-- Drawer lateral esquerra que mostra les opcions damunt persones -->
    <LinearLayout android:id="@+id/DistribucionsClientMantTaulaConvidatsNDLOperativaPersona"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:background="@color/green">
        <ImageButton
            android:id="@+id/DistribucionsClientMantTaulaConvidatsIMBEsborrarPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_white_36dp" />
        <ImageButton
            android:id="@+id/DistribucionsClientMantTaulaConvidatsIMBCanviarDeTaula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_person_add_white_24dp" />
        <ImageButton
            android:id="@+id/DistribucionsClientMantTaulaConvidatsIMBInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_refresh_white_48dp" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
