<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fons_esborrar">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:layout_gravity="center_vertical|left">

        <TextView
            android:id="@+id/LiniaLVWLlistaTaulesClientTXTDescripcio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/LiniaLVWLlistaTaulesClientIMBEditar"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:src="@drawable/ic_mode_edit_black_36dp"
            android:background="@null"
            android:onClick="LiniaLVWTaulesClientIMBEditar_Click"/>

        <ImageButton
            android:id="@+id/LiniaLVWLlistaTaulesClientIMBEsborrar"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dip"
            android:visibility="gone"
            android:background="@drawable/boto_esborrar"
            android:onClick="LiniaLVWTaulesClientIMBEsborrar_Click"/>
    </FrameLayout>
</LinearLayout>
