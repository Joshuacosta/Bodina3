<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView android:id="@+id/NomEntitatRecerca"
            android:padding="20dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ic_liniarecera"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dip"
            android:visibility="gone"
            android:src="@drawable/ic_validar"/>
    </FrameLayout>

    <!--***********************-->
    <!--*** TOOLBAR LAYOUT ****-->
    <!--***********************-->

    <LinearLayout android:id="@+id/toolbar"
        android:layout_marginBottom="-80dip"
        android:visibility="gone"
        android:layout_height="80dip"
        android:orientation="vertical"
        android:layout_width="fill_parent">
        <TextView android:id="@+id/AdresaRecerca"
            android:focusable="false"
            android:paddingLeft="40dp"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/ContacteRecerca"
            android:focusable="false"
            android:paddingLeft="40dp"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/TelefonRecerca"
            android:focusable="false"
            android:paddingLeft="40dp"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/eMailRecerca"
            android:focusable="false"
            android:paddingLeft="40dp"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
