<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".entitat_solicitar">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/litEntitatSolicitar_Entitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/EntitatSolicitar_Entitat"/>

            <FrameLayout
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinnerEntitatSolicitar_Entitat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:spinnerMode="dialog"
                    android:background="@color/white"/>

                <Button
                    android:id="@+id/AspaProva"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|right"
                    android:onClick="btnAfegirEntitatOnClick" />
            </FrameLayout>

            <EditText
                android:id="@+id/TexteEntitatSolicitar_Descripcio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/EntitatSolicitar_Descripcio" />

            <EditText
                android:id="@+id/TexteEntitatSolicitar_Contacte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/EntitatSolicitar_Contacte" />

            <EditText
                android:id="@+id/TexteEntitatSolicitar_eMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/EntitatSolicitar_eMail" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

