<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView android:id="@+id/LiniaLVWRecercaEntitatsNom"
            android:padding="20dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/LiniaLVWRecercaEntitatsIMBAcceptar"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@color/green"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dip"
            android:visibility="gone"
            android:src="@drawable/ic_check_black_48dp"
            android:onClick="LiniaLVWRecercaEntitatsIMBAcceptar_Click"/>
    </FrameLayout>
    <!-- Layout que s'extent amb la informacio de la entitat -->
    <LinearLayout android:id="@+id/LiniaLVWRecercaEntitatsLINToolbar"
        android:layout_marginBottom="-120dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="fill_parent">
        <TextView android:id="@+id/LiniaLVWRecercaEntitatsTXTAdresa"
            android:focusable="false"
            android:paddingLeft="40dp"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/LiniaLVWRecercaEntitatsTXTContacte"
            android:focusable="false"
            android:paddingLeft="40dp"
            android:focusableInTouchMode="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/LiniaLVWRecercaEntitatsTXTTelefon"
                android:focusable="false"
                android:paddingLeft="40dp"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/LiniaLVWRecercaEntitatsIMBTrucar"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dip"
                android:background="@color/white"
                android:src="@drawable/ic_call_black_36dp"
                android:onClick="LiniaLVWRecercaEntitatsIMBTrucar_Click"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/LiniaLVWRecercaEntitatsTXTeMail"
                android:focusable="false"
                android:paddingLeft="40dp"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/LiniaLVWRecercaEntitatsIMBeMail"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dip"
                android:background="@color/white"
                android:src="@drawable/ic_email_black_36dp"
                android:onClick="LiniaLVWRecercaEntitatsIMBeMail_Click"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
